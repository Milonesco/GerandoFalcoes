@model object
@{
    ViewData["Title"] = "Detalhes do Curso";
    var item = Model as System.Text.Json.JsonElement?;
}
<h1>Detalhes</h1>
@if (item == null)
{
    <div>Não encontrado</div>
}
else
{
    <dl class="row">
        <dt class="col-sm-2">Nome</dt>
        <dd class="col-sm-10">@item.Value.GetProperty("nome").GetString()</dd>
        <dt class="col-sm-2">Descrição</dt>
        <dd class="col-sm-10">@item.Value.GetProperty("descricao").GetString()</dd>
        <dt class="col-sm-2">Unidade</dt>
        <dd class="col-sm-10">@item.Value.GetProperty("unidade").GetProperty("nome").GetString()</dd>
    </dl>
    <a asp-action="Edit" asp-route-id="@(item.Value.GetProperty("idCurso").GetInt32())" class="btn btn-primary">Editar</a>
    <form asp-action="Delete" method="post" asp-route-id="@(item.Value.GetProperty("idCurso").GetInt32())" style="display:inline">
        <button type="submit" class="btn btn-danger">Excluir</button>
    </form>
}
