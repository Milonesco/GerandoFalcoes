@using Microsoft.AspNetCore.Authorization
@model IEnumerable<CursoDto>

@{
    bool isAdmin = User.IsInRole("Administrador");
}

<div class="row g-4">
    @foreach (var curso in Model)
    {
        <div class="col-md-4">
            <div class="card shadow-sm h-100">

                <img src="@(string.IsNullOrEmpty(curso.Imagem) ? "/images/default-course.jpg" : curso.Imagem)"
                     class="card-img-top" style="height:180px; object-fit:cover" />

                <div class="card-body">
                    <h5>@curso.Nome</h5>
                    <p class="text-muted">@curso.Descricao</p>

                    <button class="btn btn-primary btn-sm"
                            onclick="abrirDetalhes(@curso.IdCurso)">
                        Ver mais
                    </button>

                    @if (isAdmin)
                    {
                        <a class="btn btn-warning btn-sm"
                           asp-controller="Curso" asp-action="Edit" asp-route-id="@curso.IdCurso">
                            Editar
                        </a>

                        <a class="btn btn-danger btn-sm"
                           asp-controller="Curso" asp-action="Delete" asp-route-id="@curso.IdCurso">
                            Excluir
                        </a>
                    }
                </div>
            </div>
        </div>
    }
</div>

<script>
    function abrirDetalhes(id) {
        fetch(`/Curso/DetalhesModal?id=${id}`)
            .then(res => res.json())
            .then(data => {
                document.getElementById("modalTitulo").innerText = data.titulo;
                document.getElementById("modalDescricao").innerText = data.descricao;
                document.getElementById("modalImagem").src = data.imagem;

                new bootstrap.Modal(document.getElementById("cursoModal")).show();
            });
    }
</script>
