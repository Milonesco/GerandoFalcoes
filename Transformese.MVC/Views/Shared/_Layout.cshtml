<!DOCTYPE html>
<html lang="pt-br" data-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Transforme-se</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />

    <link href="/css/site.css?v=@DateTime.Now.Ticks" rel="stylesheet" />

    @RenderSection("Styles", required: false)
</head>
<body>

    <nav id="mainNavbar" class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light island-navbar fixed-top">
        <div class="container-fluid">

            <a class="navbar-brand" href="#inicio">
                <span style="font-weight:800;">GERANDO FALCÕES</span>
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-center">
                <ul class="navbar-nav">
                    <li class="nav-item"><a class="nav-link" href="#sobre">Sobre</a></li>
                    <li class="nav-item"><a class="nav-link" href="#vantagens">Vantagens</a></li>
                    <li class="nav-item"><a class="nav-link" href="#nosso_impacto">Nosso Impacto</a></li>
                    <li class="nav-item"><a class="nav-link" href="#parceiros">Parceiros</a></li>
                </ul>
            </div>

            <div class="d-none d-sm-flex align-items-center gap-3">

                <button id="darkModeToggle" class="btn border-0 dark-mode-toggle" title="Alternar Tema" style="background: transparent;">
                    <i class="bi bi-moon-fill fs-5"></i>
                </button>

                <a class="btn btn-nav-cta" href="@Url.Action("Index", "Inscricao")">Inscreva-se</a>
            </div>

        </div>
    </nav>

    <main role="main">
        @RenderBody()
    </main>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)

    <script src="~/js/site.js"></script>
</body>
</html>