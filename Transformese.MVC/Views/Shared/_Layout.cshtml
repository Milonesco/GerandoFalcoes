<!DOCTYPE html>
<html lang="pt-br" data-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Transforme-se</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />

    <link href="/css/site.css?v=@DateTime.Now.Ticks" rel="stylesheet" />

    @RenderSection("Styles", required: false)
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-dark gf-navbar shadow-sm mb-4">
        <div class="container-fluid">

            <a class="navbar-brand fw-bold text-white d-flex align-items-center" href="@Url.Action("Index", "Home")">
                <img src="~/images/logo-transformese.png" height="40" class="me-2" />
            </a>

            <button class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#mainNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="mainNavbar">

                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link text-light fw-semibold" href="@Url.Action("Index", "Home")">Início</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light fw-semibold" href="@Url.Action("Index", "Unidades")">Conhecer ONGs</a>
                    </li>
                </ul>

                <div class="d-flex align-items-center mt-3 mt-lg-0 gap-3">

                    <i class="text-white dark-mode-toggle d-flex align-items-center" id="darkModeToggle" style="cursor: pointer; font-size: 1.25rem;"></i>

                    <a class="btn btn-dark fw-bold d-flex align-items-center justify-content-center px-4"
                       href="@Url.Action("Index", "Inscricao")"
                       style="height: 40px; min-width: 180px;">
                        INSCREVA-SE AGORA!
                    </a>
                </div>

            </div>
        </div>
    </nav>

    <main class="container">
        @RenderBody()
    </main>

    <footer class="gf-footer text-center py-3 mt-auto">
        <small>&copy; @DateTime.Now.Year - Transforme-se. Todos os direitos reservados.</small>
    </footer>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)

    <script src="~/js/site.js"></script>
</body>
</html>