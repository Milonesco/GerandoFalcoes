@model Transformese.Domain.Entities.Curso

<div class="row align-items-center">
    <!-- Imagem do curso -->
    <div class="col-md-5 text-center mb-3 mb-md-0">
        <img src="@(!string.IsNullOrEmpty(Model.Imagem) ? Model.Imagem : "/images/default-course.jpg")"
             alt="@Model.Nome"
             class="img-fluid rounded shadow-sm"
             style="max-height: 250px; object-fit: cover;">
    </div>

    <!-- Informações do curso -->
    <div class="col-md-7">
        <h4 class="fw-bold text-primary mb-3">@Model.Nome</h4>
        <p class="text-muted">@Model.Descricao</p>
        <ul class="list-unstyled">
            <li><strong>Unidade:</strong> @Model.Unidade?.Nome</li>
            <li><strong>Descrição:</strong> @Model.Descricao</li>
            <li><strong>Unidade:</strong> @Model.Unidade</li>
    
        </ul>

        <div class="mt-3">
            <a href="@Url.Action("Matricular", "Curso", new { id = Model.IdCurso })" class="btn btn-primary px-4">
                Matricular-se
            </a>
        </div>
    </div>
</div>
