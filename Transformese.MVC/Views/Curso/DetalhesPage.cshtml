@model CursoDto

<div class="container mt-4">
    <h2>@Model.Nome</h2>

    <img src="@($"/images/cursos/{Model.Imagem}")"
         class="img-fluid rounded mb-3"
         style="max-height:350px; object-fit:cover;">

    <p>@Model.Descricao</p>

    <p><strong>Unidade:</strong> @Model.UnidadeNome</p>

    <a href="@Url.Action("Index", "Curso")" class="btn btn-secondary mt-3">Voltar</a>
</div>
