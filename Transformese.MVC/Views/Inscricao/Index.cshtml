@model Transformese.MVC.ViewModels.CandidatoInscricaoViewModel

@{
    ViewData["Title"] = "Inscrição Transforme-se";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3>🚀 Ficha de Inscrição</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Criar" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <h5 class="mb-3">Dados Pessoais</h5>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Nome Completo</label>
                                <input asp-for="NomeCompleto" class="form-control" placeholder="Seu nome" />
                                <span asp-validation-for="NomeCompleto" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">CPF</label>
                                <input asp-for="CPF" class="form-control" placeholder="000.000.000-00" />
                                <span asp-validation-for="CPF" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Data Nascimento</label>
                                <input asp-for="DataNascimento" type="date" class="form-control" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">WhatsApp / Celular</label>
                                <input asp-for="Telefone" class="form-control" />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">E-mail</label>
                            <input asp-for="Email" type="email" class="form-control" />
                        </div>

                        <hr />
                        <h5 class="mb-3">Localização e Estrutura</h5>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Cidade</label>
                                <input asp-for="Cidade" class="form-control" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Estado</label>
                                <input asp-for="Estado" class="form-control" placeholder="SP, RJ..." />
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" asp-for="PossuiComputador">
                                    <label class="form-check-label">Tenho computador disponível</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" asp-for="PossuiInternet">
                                    <label class="form-check-label">Tenho acesso à internet</label>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">LinkedIn (Opcional)</label>
                            <input asp-for="PerfilLinkedin" class="form-control" placeholder="https://linkedin.com/in/..." />
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg">Finalizar Inscrição</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>