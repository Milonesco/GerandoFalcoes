@model TransformeseMVC.Web.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Registrar";
}

<div class="container mt-5">
    <h2 class="text-center text-primary mb-4">Criar Conta</h2>

    <form asp-action="Register" enctype="multipart/form-data">
        <div class="form-group mb-3">
            <label asp-for="NomeCompleto"></label>
            <input asp-for="NomeCompleto" class="form-control" />
        </div>

        <div class="form-group mb-3">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" />
        </div>

        <div class="form-group mb-3">
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control" type="password" />
        </div>

        <div class="form-group mb-3">
            <label asp-for="ConfirmPassword"></label>
            <input asp-for="ConfirmPassword" class="form-control" type="password" />
        </div>

        <div class="form-group mb-3">
            <label for="FotoPerfil">Foto de Perfil (opcional)</label>
            <input type="file" name="FotoPerfil" class="form-control" accept="image/*" />
        </div>

        <button type="submit" class="btn btn-primary w-100">Registrar</button>
    </form>
</div>
