@using Transformese.Domain.Enums
@model Transformese.MVC.ViewModels.CandidatoDetalhesViewModel

@{
    ViewData["Title"] = "Detalhes do Candidato";
}

<div class="container mt-4">
    <div class="card shadow-lg">
        <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
            <h3 class="mb-0">👤 Ficha do Candidato</h3>
            <span class="badge bg-warning text-dark fs-6">@Model.Status</span>
        </div>
        <div class="card-body">

            <div class="row mb-4 p-3 bg-light border rounded mx-1">
                <h5 class="text-secondary border-bottom pb-2">Dados Pessoais & Contato</h5>

                <div class="col-md-4 mb-3">
                    <label class="fw-bold text-muted small">Nome Completo</label>
                    <p class="fs-5">@Model.NomeCompleto</p>
                </div>
                <div class="col-md-4 mb-3">
                    <label class="fw-bold text-muted small">CPF</label>
                    <p class="fs-5">@Model.CPF</p>
                </div>
                <div class="col-md-4 mb-3">
                    <label class="fw-bold text-muted small">Localização</label>
                    <p class="fs-5">@Model.Cidade - @Model.Estado</p>
                </div>

                <div class="col-md-6 mb-3">
                    <label class="fw-bold text-muted small">Contatos</label>
                    <p>
                        📞 @Model.Telefone <br />
                        ✉️ @Model.Email
                    </p>
                </div>
                <div class="col-md-6 mb-3">
                    <label class="fw-bold text-muted small">Infraestrutura</label>
                    <p>
                        @(Model.PossuiComputador ? "✅ Tem Computador" : "❌ Sem Computador") <br />
                        @(Model.PossuiInternet ? "✅ Tem Internet" : "❌ Sem Internet")
                    </p>
                </div>

                @if (!string.IsNullOrEmpty(Model.PerfilLinkedin))
                {
                    <div class="col-12">
                        <a href="@Model.PerfilLinkedin" target="_blank" class="btn btn-sm btn-outline-primary">
                            Ver LinkedIn
                        </a>
                    </div>
                }
            </div>

            <form asp-action="Salvar" asp-route-id="@Model.Id" method="post">
                <div class="row p-3 border border-primary rounded mx-1 bg-white">
                    <h5 class="text-primary border-bottom pb-2">Área de Triagem (Admin)</h5>

                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">Alterar Status</label>
                        <select asp-for="Status" asp-items="Html.GetEnumSelectList<StatusCandidato>()" class="form-select form-select-lg">
                        </select>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">Designar ONG Responsável</label>
                        <select asp-for="UnidadeId" asp-items="ViewBag.Unidades" class="form-select form-select-lg">
                            <option value="">-- Selecione ou Deixe na Fila Geral --</option>
                        </select>
                    </div>

                    <div class="col-12 mb-3">
                        <label class="form-label fw-bold">Parecer da Gerando Falcões</label>
                        <textarea asp-for="ObservacoesGF" class="form-control" rows="3" placeholder="Insira anotações internas sobre este candidato..."></textarea>
                    </div>
                </div>

                <div class="d-flex justify-content-end gap-2 mt-4">
                    <a asp-action="Index" class="btn btn-secondary btn-lg">Voltar</a>
                    <button type="submit" class="btn btn-success btn-lg">💾 Salvar Alterações</button>
                </div>
            </form>

        </div>
    </div>
</div>