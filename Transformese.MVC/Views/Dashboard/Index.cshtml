@model Transformese.MVC.ViewModels.DashboardViewModel

@{
    ViewData["Title"] = "Painel Administrativo";
}

<div class="container mt-4">

    <h2 class="fw-bold mb-4 text-center">
        <i class="bi bi-speedometer2 me-2"></i> Painel Administrativo
    </h2>

    <!-- CARDS -->
    <div class="row g-4">

        <div class="col-md-3">
            <div class="card shadow-lg border-0 rounded-4 dashboard-card-hover">
                <div class="card-body text-center py-4">
                    <i class="bi bi-mortarboard fs-1 text-primary"></i>
                    <h5 class="mt-3">Unidades</h5>
                    <p class="fs-3 fw-bold">@Model.TotalUnidades</p>
                    <a href="@Url.Action("Index", "Unidade")" class="btn btn-outline-primary w-100">Gerenciar</a>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-lg border-0 rounded-4 dashboard-card-hover">
                <div class="card-body text-center py-4">
                    <i class="bi bi-person-lines-fill fs-1 text-success"></i>
                    <h5 class="mt-3">Candidatos</h5>
                    <p class="fs-3 fw-bold">@Model.TotalCandidatos</p>
                    <a href="@Url.Action("Index", "Candidato")" class="btn btn-outline-success w-100">Gerenciar</a>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-lg border-0 rounded-4 dashboard-card-hover">
                <div class="card-body text-center py-4">
                    <i class="bi bi-shield-lock fs-1 text-danger"></i>
                    <h5 class="mt-3">Administradores</h5>
                    <p class="fs-3 fw-bold">@Model.TotalAdministradores</p>
                    <a href="@Url.Action("Index", "Admin")" class="btn btn-outline-danger w-100">Gerenciar</a>
                </div>
            </div>
        </div>

    </div>

    <hr class="my-5" />

    <!-- GRÁFICOS -->
    <div class="row mt-4">
        <div class="col-md-6">
            <canvas id="graficoUsuarios"></canvas>
        </div>
        <div class="col-md-6">
            <canvas id="graficoUnidades"></canvas>
        </div>
    </div>

</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <script>
        new Chart(document.getElementById("graficoUsuarios"), {
            type: 'pie',
            data: {
                labels: ['Candidatos', 'Unidades', 'Administradores'],
                datasets: [{
                    data: [
                        @Model.TotalCandidatos,
                        @Model.TotalUnidades,
                        @Model.TotalAdministradores
                    ]
                }]
            }
        });

        new Chart(document.getElementById("graficoUnidades"), {
            type: 'bar',
            data: {
                labels: ['Unidades'],
                datasets: [{
                    label: 'Quantidade',
                    data: [@Model.TotalUnidades]
                }]
            }
        });
    </script>

    <style>
        .dashboard-card-hover {
            transition: transform .2s ease, box-shadow .2s ease;
        }

            .dashboard-card-hover:hover {
                transform: translateY(-6px);
                box-shadow: 0 10px 30px rgba(0,0,0,0.2);
            }
    </style>
}
