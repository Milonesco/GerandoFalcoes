@model Transformese.MVC.ViewModels.DashboardCountsDto

@{
    ViewData["Title"] = "Dashboard Gerencial";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-primary">📊 Visão Geral</h2>
            <p class="text-muted">Acompanhamento em tempo real do processo seletivo.</p>
        </div>
        <div>
            <a asp-controller="AdminCandidatos" asp-action="Index" class="btn btn-outline-primary">
                <i class="bi bi-list-ul"></i> Ver Lista Completa
            </a>
        </div>
    </div>

    <div class="row g-4 mb-5">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100 border-start border-4 border-primary">
                <div class="card-body">
                    <h6 class="text-uppercase text-muted small fw-bold">Total Inscritos</h6>
                    <h1 class="display-4 fw-bold text-primary mb-0">@Model.TotalInscritos</h1>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100 border-start border-4 border-warning">
                <div class="card-body">
                    <h6 class="text-uppercase text-muted small fw-bold">Fila de Triagem (GF)</h6>
                    <h1 class="display-4 fw-bold text-warning mb-0">@Model.PendenteTriagem</h1>
                    <small class="text-muted">Precisam ser encaminhados</small>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100 border-start border-4 border-info">
                <div class="card-body">
                    <h6 class="text-uppercase text-muted small fw-bold">Em Entrevista (ONGs)</h6>
                    <h1 class="display-4 fw-bold text-info mb-0">@Model.AguardandoEntrevista</h1>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100 border-start border-4 border-success">
                <div class="card-body">
                    <h6 class="text-uppercase text-muted small fw-bold">Aprovados / Matriculados</h6>
                    <h1 class="display-4 fw-bold text-success mb-0">@Model.Aprovados</h1>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0">Atalhos de Gestão</h5>
                </div>
                <div class="card-body p-4">
                    <div class="d-grid gap-3 d-md-block">
                        <a asp-controller="Inscricao" asp-action="Index" target="_blank" class="btn btn-secondary me-md-2">
                            🔗 Abrir Link de Inscrição
                        </a>
                        <a asp-controller="PainelOng" asp-action="Index" asp-route-unidadeId="1" target="_blank" class="btn btn-secondary">
                            🔗 Testar Painel da ONG (ID 1)
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>