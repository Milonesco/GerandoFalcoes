@model IEnumerable<Transformese.Domain.Entities.Curso>
@{
    ViewData["Title"] = "Minhas Turmas";
}

<h2 class="fw-bold text-primary mb-4">Turmas e Cursos</h2>

<table class="table table-hover align-middle">
    <thead class="table-light">
        <tr>
            <th>Título</th>
            <th>Unidade</th>
            <th>Dia</th>
            <th>Horário</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var curso in Model)
        {
            <tr>
                <td>@curso.Nome</td>
                <td>@curso.Unidade?.Nome</td>
             
                <td>
                    <a class="btn btn-sm btn-transforme" href="#">Ver Alunos</a>
                </td>
            </tr>
        }
    </tbody>
</table>
